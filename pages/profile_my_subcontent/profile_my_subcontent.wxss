page{
    width:100%;
    background:#f5f5f5;
}

.header{
    background:white;
    position: relative;
    height:80rpx;
    margin-bottom:10rpx;
    line-height:80rpx;
    color:#fe7c00;
    font-size:30rpx;
    padding-left:30rpx;
}

.header .btn{
    position: absolute;
    right:20rpx;
    top:50%;
    width:150rpx;
    height:50rpx;
    line-height:50rpx;
    margin:0;
    font-size:28rpx;
    transform: translateY(-40%);
}