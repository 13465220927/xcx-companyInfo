<view class="banner-wrap">
  <view style="background:{{bg}}"  bindtap="modifyBg" class="myqy">
        <image src="../../../img/index/leftNotice.png" /> 
        <text>名城展示</text>
  </view>
 
  <swiper class="banner" indicator-dots="{{false}}"
    autoplay="true" interval="7000" duration="2000">
    <block wx:for="{{bannerImg}}" wx:key="{{index}}">
      <swiper-item>
        <image src="{{item.img}}" class="slide-image"/>
      </swiper-item>
    </block>
  </swiper>
</view>
