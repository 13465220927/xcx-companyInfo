.mine-wrap{
    position:fixed;
    left:0;
    top:0;
    width:100%;
    height:100vh;
    background:#ebeff2;
    z-index: 3;
}
.mine-wrap .mine-header{
    width:750rpx;
    height:452rpx;
    text-align:center;
    font-size:28rpx;
    color:white;
    position: relative;
    padding-top:20rpx;
    background: linear-gradient(to right, #0e92f0 0%, #63beff 100%);
}
.mine-header .userImg{
    width:136rpx;
    height:136rpx;
    display: block;
    margin:0rpx auto 40rpx;
    border-radius: 50%;
}
.mine-header .userID{
    font-size:26rpx;
    margin-top:10rpx;
}
.mine-header .promote{
    position: absolute;
    left:0;
    bottom:0;
    width:100%;
    height:104rpx;
    background:#1677bc;
    display: flex;
    align-items: center;
    padding-left:20rpx;
}
.promote i-icon{
    margin-right:10rpx;
}
.promote view{
     text-align: left;
     font-size:22rpx; 
     padding:0 20rpx 0 0;
}
.mine-footer{
    width:530rpx;
    height:98rpx;
    position: absolute;
    bottom:100rpx;
    left:50%;
    transform: translateX(-50%);
}