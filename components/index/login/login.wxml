<view class="login-wrap">
    <view class="body">
         <image class="loginText" src="../../../img/index/loginText.png" />
         <view class="loginInput">
               <i-input bind:change="emailChange"  title="邮箱" autofocus placeholder="请输入邮箱" />
               <i-input bind:change="passChange" title="密码" placeholder="请输入密码" />
         </view>
         
         <button bindtap="handleLogin">自动授权登录</button>

         <view bindtap="toSign" class="toPhoneIdent">
            注册账号>
          </view>
    </view>
    
</view>