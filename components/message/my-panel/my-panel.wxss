.sendInput{
    position: fixed;
    bottom:0;
    left:0;
    width:100%;
    height:85rpx;
    display:flex;
    align-items: center;
    border-top:1px solid #d8d8d8;
    font-size:30rpx;
}
.sendInput button{
    width:120rpx;
    height:100%;
    padding:0;
    line-height:85rpx;
    color:white;
    background:rgb(31, 209, 31);
    text-align:Center; 
    margin-left:10rpx;
    font-size:30rpx;
    padding-left:20rpx;
}
.sendInput input{
    flex:1;
    border-bottom:1px solid #8de64e;
}