.sendInput{
    position: fixed;
    bottom:0;
    left:0;
    width:100%;
    height:85rpx;
    display:flex;
    align-items: center;
    border-top:1px solid #d8d8d8;
    font-size:30rpx;
    padding-left:30rpx;
    background:white;
}
.sendInput button{
    width:110rpx;
    height:73rpx;
    padding:0;
    line-height:73rpx;
    color:white;
    background:rgb(31, 209, 31);
    text-align:Center; 
    margin-left:10rpx;
    font-size:13px;
    position: relative;
    top:-7rpx; 
}
.sendInput input{
    flex:1;
    border-bottom:1px solid #8de64e;
    
}