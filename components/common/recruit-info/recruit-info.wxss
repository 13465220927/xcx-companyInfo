.infoData{
    padding-top:20rpx;
    margin-top:20rpx;
    background:white;
 }
 
 .infoData .item{
     background:white;
     position: relative;
 }
 .infoData .item .header{
     width:100%;
     height:80rpx;
     display: flex;
     align-items: center;
 }
 .infoData .item .header .userImg{
     width:80rpx;
     height:80rpx;
     border-radius:50%;
     overflow:hidden;
     margin:0 10rpx;
 }
 .infoData .item .header .userName{
     font-size:26rpx;
     color:#575d86;
 }
 .infoData .item .header .userData{
     width:60%;
     display: flex;
     align-items: center;
 }
 .infoData .item .header .kind{
    position: absolute;
    right:10rpx;
 }
 .infoData .item .header .kind .infoType{
     width:126rpx;
     height:34rpx;
     background:#ff8000;
     font-size:26rpx;
     color:white;
 }
 .infoData .item .header .kind .call{
     height:34rpx;
     width:34rpx;
     margin:0 10rpx;
 }
 .infoData .item .header .kind text{
     font-size:24rpx;
     color:#8f8f8f;
 }
 
 .infoData .item .content{
     width:100%;
     padding-left:126rpx;
     font-size:24rpx;
     color:#8f8f8f;
     line-height:30rpx; 
     padding-bottom:38rpx;
 }
 .infoData .item .content .subType{
     color:#575d86;
     font-size:26rpx;
     margin:18rpx 0;
     font-weight:700;
 }
 .infoData .item .content .time i-icon{
     float:right;
     margin-right:30rpx;
 } 
 .replayMessage{
     padding-top:5rpx;
     padding-right:10rpx;
 }
 .replyInp{
     position: absolute;
     bottom:0rpx;
     left:0;
     background:rgb(232, 233, 229);
     width:100%;
 }
 .opera{
    width:375rpx;
    height:80rpx;
    background:#4c5154;
    font-size:24rpx;
    display:flex;
    justify-content: center;
    align-items: center;
    color:white;
    margin-right:10rpx;
    padding:0 8rpx;
    position: absolute;
    right:60rpx;
    bottom:0;
}

.opera .item{
    
    border-right:1px solid #313639;
    background:#4c5154;
}
.opera .item i-icon{
    margin-right:5rpx;
}