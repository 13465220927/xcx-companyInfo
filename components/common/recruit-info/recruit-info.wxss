.infoData{
 
    margin-top:20rpx;
    background:white;
    padding:20rpx 30rpx 14rpx 0;
 }
 
 .infoData .item{
     background:white;
     position: relative;
     padding-left:4rpx;
 }
 .infoData .item .header{
     width:100%;
     height:80rpx;
     display: flex;
     align-items: center;
 }
 .infoData .item .header .userImg{
     width:80rpx;
     height:80rpx;
     border-radius:50%;
     overflow:hidden;
     margin:0 10rpx;
 }
 .infoData .item .header .userName{
     font-size:26rpx;
     color:#575d86;
 }
 .infoData .item .header .userData{
     width:60%;
     display: flex;
     align-items: center;
 }
 .infoData .item .header .kind{
    position: absolute;
    right:10rpx;
 }
 .infoData .item .header .kind .infoType{
     width:120rpx;
     height:44rpx;
     text-align:Center;
     line-height:44rpx;
     display: inline-block;
     background:#ff8000;
     font-size:13px;
     color:white;
     border-radius:10rpx;
 }
 .infoData .item .header .kind .call{
     width:34rpx;
     height:34rpx;
     margin:0 10rpx;
     display: inline-block;
     position: relative;
 }
 .call image{
     position: absolute;
     top:8rpx;
     width:34rpx;
     height:34rpx;
 }
 .infoData .item .header .kind text{
     font-size:24rpx;
     color:#8f8f8f;
 }
 
 .infoData .item .content{
     width:100%;
     padding-left:126rpx;
     font-size:13px;
     line-height:18px;
     color:#9b9b9b;
   
     padding-bottom:38rpx;
 }
 .infoData .item .content .subType{
     /* color:#575d86; */
     font-size:13px;
     margin:18rpx 0;
     /* font-weight:700; */
 }
 .infoData .item .content .time .opera-click{
     float:right;
     margin-right:30rpx;
 } 
 .replayMessage{
     padding-top:5rpx;
     padding-right:10rpx;
 }
 .replyInp{
     position: absolute;
     bottom:0rpx;
     left:0;
     background:rgb(232, 233, 229);
     width:100%;
 }
 .opera{
    width:385rpx;
    height:80rpx;
    background:#4c5154;
    border-radius:6rpx;
    font-size:24rpx;
    display:flex;
    justify-content: center;
    align-items: center;
    color:white;
    margin-right:10rpx;
    padding:0 8rpx;
    position: absolute;
    right:60rpx;
    bottom:60rpx;
    z-index:2;
}

.opera .item{
    border-right:1px solid #313639;
    display:flex;
    align-items:center;
    justify-content: center;
    background:#4c5154;
    padding:0 15rpx;
}
.opera .item i-icon{
    margin-right:8rpx;
}


.clickNum{
    background:#e8e8e8;
    margin-top:40rpx;
    display:flex;
    align-items: center;
    padding-left:20rpx;
    position: relative; 
    line-height:50rpx;
    border-radius:6rpx;
}
.clickNum .rubb{
    margin-right:20rpx;
}
.triangle{
    position: absolute;
    bottom:20rpx; 
    left:25rpx;
    transform: rotate(-90deg);
}