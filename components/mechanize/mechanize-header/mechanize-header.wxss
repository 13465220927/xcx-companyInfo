.header-wrap{
    width:100%;
    height:321rpx;
    background:url('https://xcx5.zhuozhida.cn/images/zhuqi/mechanize-bg.png') no-repeat;
    background-size:100% 100%;
    color:white;
    font-size:30rpx;
    padding-top:50rpx;
    padding-left:30rpx;
}
.userImg{
    width: 124rpx;
    height:124rpx;
    border-radius:50%;
    border:2rpx solid white;
    position: relative;
    z-index:1;
}
.header-wrap .company-name{
    width:460rpx;
    height:52rpx;
    line-height:52rpx;
    background:white;
    position: absolute;
    left:56rpx;
    top:61rpx;
    color:black;
    border-radius:40rpx;
    padding-left:110rpx;
    font-size:15px;
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;

}
.header-wrap .company-info{
    position: absolute;
    left:160rpx;
    top:131rpx;
    padding-left:20rpx;
}
.company-info view{
    margin:2rpx 0;
}
.contact{
   height:80rpx;
   width:100%;
   background:white;
   margin-top:10rpx;
}
.contact .opera{
    width:312rpx;
    height:80rpx;
    background:#4c5154;
    font-size:24rpx;
    float:right;
    display:flex;
    justify-content: center;
    align-items: center;
    color:white;
    margin-right:10rpx;
    border-radius:6rpx;
}
.opera .item{
    padding:0 20rpx 0 6rpx;
    border-right:1px solid #313639;
    margin-right:20rpx;
}
.item i-icon{
    margin-right:10rpx;
}
.floRight{
    float:right;
    background:#97abda;
    margin-right:20rpx;
}