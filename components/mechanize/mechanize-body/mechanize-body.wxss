.body-wrap{
    margin-top:10rpx;
    background:white;
    color:#939393;
    font-size:12px;
    padding:20rpx;
}
.body-wrap .info-header{
    font-size:14px;
    color:#2b3135;
    padding-left:10rpx;
}
.info-header i-icon{
    margin-right:10rpx;
}
.info-detail{
    text-indent:36rpx;
    line-height:40rpx;
    text-align:justify;
    margin-bottom:30rpx;
    font-size:12px;
    padding:20rpx 10rpx 0 10rpx;
}
.prizeImg,.pictureImg,.videos{
    display:flex;
    padding:14rpx 14rpx 0rpx 46rpx;
    align-items: center;
}
.prizeImg image,.pictureImg image,.videos image,.videos hidden-wrap{
    width:126rpx;
    height:126rpx;
    margin-right:20rpx;
    margin-bottom:30rpx;
    border-radius:6rpx;
}
